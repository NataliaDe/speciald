<br>
{%if type_sd == 1%}


    <div class="form-group row create-form-row">
        <div class="col-sm-6">Содержание поступившей информации


            <label for="is_show_opening_descr" >&nbsp;</label>
            <div class="checkbox checkbox-success" style='display:inline'>
                <input  type="checkbox" name="is_show_opening_descr" value="1" id="is_show_opening_descr" {%if is_edit_dones is defined and is_edit_dones == 1 and dones is defined and dones.is_show_opening_descr is  defined and dones.is_show_opening_descr == 1 %}checked{%endif%}>
                <label for="is_show_opening_descr">
                    выводить содержание поступившей информации в СД <i class="fa fa-info-circle info-all" aria-hidden="true" data-toggle="tooltip" data-placement="top" title="будет добавлена в СД перед координатами"></i>
                </label>
            </div>
        </div>



        <div class="form-group col-md-3 theme-msg {%if is_edit_dones is defined and is_edit_dones == 1 and dones is defined and dones.is_show_opening_descr is  defined and dones.is_show_opening_descr == 1 %}hide{%endif%}">
            <select class="form-control select2-single-theme-msg" name="id_theme_message" id="id_theme_message"  >
                <option></option>
                {% for theme in theme_messages %}
                    <option value="{{ theme.id }}" {%if (is_edit_dones is defined and is_edit_dones == 1 and dones is defined and dones.id_theme_message == theme.id) %}selected{%endif%} >{{ theme.name }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
{%endif%}
<div class="form-group row create-form-row">

    <div class="col-sm-12">
        <textarea class="form-control" name="opening_description" id="opening_description_id"  rows="10" cols="50">{%if rig.description is defined and rig.description is not empty and rig.description is not null %}{{rig.description|trim}}{%elseif is_edit_dones is defined and is_edit_dones == 1 and dones is defined and dones.opening_description is not empty %}{{dones.opening_description|trim}}{%endif%}</textarea>
    </div>
</div>


