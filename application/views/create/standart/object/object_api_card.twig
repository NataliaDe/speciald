<div class="form-row create-form-row">
<div class="form-group col-md-1" >
    <label for="api_date"  >Дата установки:</label>
    <input type="text" autocomplete="off" class="form-control date-cal-default-empty"  placeholder="" name="api_date" value="{%if is_edit_dones is defined and is_edit_dones == 1 and dones.object is defined and dones.object.api_date is not empty and dones.object.api_date != '0000-00-00' and dones.object.api_date is not null %}{{dones.object.api_date|date('d.m.Y')}}{%endif%}">
</div>


<div class="form-group col-md-3">
    <label for="id_api_source" >Источник финансирования для установки</label>
    <select class="form-control select2-single-face-belong" name="id_api_source" id="id_api_source"  >
        <option></option>
        {% for source in api_source %}
            <option value="{{ source.id }}" {%if (is_edit_dones is defined and is_edit_dones == 1 and dones.object is defined and dones.object.id_api_source == source.id)%}selected{%endif%} >{{ source.name }}</option>
        {% endfor %}
    </select>
</div>


<div class="form-group col-md-1">
    <label for="is_api_worked" style="display: block;" ></label>
    <div class="checkbox checkbox-success">
        <input  type="checkbox" name="is_api_worked" value="1" id="is_api_worked" {%if is_edit_dones is defined and is_edit_dones == 1 and dones is defined and dones.object is defined and dones.object is not empty and dones.object.is_api_worked == 1 %}checked{%endif%}>
        <label for="is_api_worked" >
            АПИ сработал
        </label>
    </div>
</div>

<div class="form-group col-md-3">
    <label for="is_api_influence" >&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
    <div class="checkbox checkbox-success">
        <input  type="checkbox" name="is_api_influence" value="1" id="is_api_influence" {%if is_edit_dones is defined and is_edit_dones == 1 and dones is defined and dones.object is defined and dones.object is not empty and dones.object.is_api_influence == 1 %}checked{%endif%}>
        <label for="is_api_influence" >
            сработка повлияла на обнаружение загорания
        </label>
    </div>
</div>
        </div>