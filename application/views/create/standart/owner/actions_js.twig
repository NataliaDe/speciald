if (parseInt(object_house_id) !== {{id_object_avtotransport}}){

            $('#div-is-api').removeClass('hide');
            $('#div-is-api').removeClass('show');
            $('#div-is-api').addClass('show');
            }

            setPreviewOwner();
            setPreviewDataObject();

        } else if (parseInt(face) === 2) {

            if (parseInt(object_house_id) !== {{id_object_avtotransport}}){
