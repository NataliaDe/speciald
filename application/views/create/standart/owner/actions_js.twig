            $('#individual-face-div').removeClass('hide');
            $('#individual-face-div').addClass('show');
            }

//hide aps
            $('#div-is-aps').removeClass('hide');
            $('#div-is-aps').removeClass('show');
            $('#div-is-aps').addClass('hide');

